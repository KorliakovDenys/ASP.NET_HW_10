@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using ASP.NET_HW_9.Core
@model DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Amount)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole(Role.Admin.ToString())) {
        <a asp-page="./Edit" asp-route-id="@Model.Product.Id">Edit</a>
        <span>|</span>
    }
    else if (User.IsInRole(Role.User.ToString())) {
        <form asp-page-handler="Cart" method="post">
            <input name="productId" class="d-none" value="@Model.Product.Id">
            <button class="btn btn-primary oi oi-cart">Buy</button>
        </form>
    }
    <a asp-page="./Index">Back to List</a>
</div>